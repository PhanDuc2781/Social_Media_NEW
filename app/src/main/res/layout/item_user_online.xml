<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="2dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_UserOnline"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mes" />

        <TextView
            android:id="@+id/txt_NameUserOnline"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_UserOnline"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Phan Duc"
            android:textColor="@color/black"
            android:textSize="11dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_Online"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@drawable/bg_online"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"/>

    </RelativeLayout>


</RelativeLayout>