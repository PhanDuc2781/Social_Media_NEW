<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_UserChatContact"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tao1" />

        <ImageView
            android:id="@+id/img_Online"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/bg_online"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name_UserChatContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/img_UserChatContact"
            android:fontFamily="@font/poppins_regular"
            android:text="Name User"
            android:textColor="#0C0C0C"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_Off"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/bg_off"
            android:fontFamily="@font/poppins_regular"
            android:padding="0.5dp"
            android:text="10 phÃºt"
            android:textColor="#73D601"
            android:textSize="9dp"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>